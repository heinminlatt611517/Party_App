<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/smily_face1" />

    <TextView
            android:fontFamily="@font/za"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="@string/thank_you_for_your_email_we_will_get_back_to_you_asap" />


    <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:background="@drawable/btn_login_gradiant"
            android:text="@string/try_again_please"
            android:visibility="gone"
            android:textColor="@android:color/white" />

</LinearLayout>