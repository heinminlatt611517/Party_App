<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#20051E"
        tools:context=".views.Fragments.SettingsFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_title_bar">

        <TextView
                android:fontFamily="@font/za"
                android:text="@string/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:textColor="@color/color_pick"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

        <ImageView
                android:src="@drawable/ic_arrow_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnBack"
                android:padding="10dp"
                android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#20051E">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/color_blue_one"
                    android:layout_marginTop="30dp">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:id="@+id/layout_profile">

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-----"
                            android:textColor="@color/color_pick"
                            android:id="@+id/tv_name" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_mail_address"
                            android:text="-----"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one"
                        android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one"
                    android:layout_marginTop="20dp">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_pick"
                            android:layout_marginEnd="10dp"
                            android:text="@string/myanmar" />

                    <Switch
                            android:id="@+id/switch_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/color_pick"
                            android:trackTint="@color/color_pick" />


                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_pick"
                            android:layout_marginStart="10dp"
                            android:text="@string/english" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one"
                    android:layout_marginTop="20dp">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_facebook_setting"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/post_photos_on_facebook"
                            android:textColor="@color/color_pick" />

                </LinearLayout>


                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/color_pick"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:trackTint="@color/color_pick" />

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bell"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/notification"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:id="@+id/layout_follower"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_follow"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/followers"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one"
                    android:layout_marginTop="20dp">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_internet"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/visit_website"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layoutPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_privacy"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_blue_one">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_tram"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/terms_and_conditions"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/color_blue_one">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick"
                        android:layout_alignParentBottom="true" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_logout"
                            android:textColor="@color/color_pick" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/logout"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_one" />

            </RelativeLayout>

            <TextView
                    android:fontFamily="@font/za"
                    android:text="@string/version_1_0_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_version"
                    android:textSize="12sp"
                    android:textColor="@color/color_pick"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>