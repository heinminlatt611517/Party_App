<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_blue_one"
        android:orientation="vertical"
        tools:context=".views.Fragments.FilterFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_title_bar">

                <TextView
                        android:fontFamily="@font/za"
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/filter"
                        android:textColor="@color/color_pick"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow_back"
                        android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_following"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_follow" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/following"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_following"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

            </RelativeLayout>

            <!--            <View-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="20dp"-->
            <!--                    android:background="@color/color_divider_pick" />-->

            <RelativeLayout
                    android:id="@+id/layout_closest_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_location" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/closest_location"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_closest_location"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_most_liked"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_heart_line" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/most_liked"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_most_liked"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_most_comment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/comment" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/most_comments"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_most_comment"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_fun"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_most_fun" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/fun"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_fun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_most_recent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one"
                    android:visibility="gone">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_divider_pick" />


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/most_recent"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_most_recent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />
            </RelativeLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:background="@color/color_divider_pick" />

            <RelativeLayout
                    android:id="@+id/layout_crowded"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_blue_one">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_divider_pick" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_large_crowd" />

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/crowded"
                            android:textColor="@color/color_pick" />

                </LinearLayout>

                <ImageView
                        android:id="@+id/iv_crowded"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
