<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_blue_one"
        android:orientation="vertical"
        tools:context=".views.Fragments.LoyalityFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color_pick">

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_reward_title" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pick"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                    <ImageView
                            android:id="@+id/iv_current_status_logo"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_star_partyer" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Points"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />

                        <TextView
                                android:id="@+id/tv_current_point"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/color_text"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />

                        <TextView
                                android:id="@+id/tv_current_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Socializer"
                                android:textColor="@color/color_text"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_status_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_star_socializer" />

                        <ImageView
                                android:id="@+id/iv_status_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_star_partyer" />

                        <ImageView
                                android:id="@+id/iv_status_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_star_rager" />

                        <ImageView
                                android:id="@+id/iv_status_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_star_vip" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_indicator_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_up" />

                        <ImageView
                                android:id="@+id/iv_indicator_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_up" />

                        <ImageView
                                android:id="@+id/iv_indicator_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_up" />

                        <ImageView
                                android:id="@+id/iv_indicator_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_up" />
                    </LinearLayout>

                    <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/color_text" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/textView9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Socializer"
                                android:textAlignment="center"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />

                        <TextView
                                android:id="@+id/textView8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Partyer"
                                android:textAlignment="center"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />

                        <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rager"
                                android:textAlignment="center"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />

                        <TextView
                                android:id="@+id/textView5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="VIP"
                                android:textAlignment="center"
                                android:textColor="@color/color_text"
                                android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:id="@+id/tv_next_tier_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:paddingStart="15dp"
                        android:text="Unlock Partyer only 260 pts"
                        android:textColor="@color/color_text" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/bbtn_how_earn_points"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How to earn points for Star Rewards"
                            android:textColor="@color/color_pick"
                            android:textSize="17sp" />

                    <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/color_pick" />

                <LinearLayout
                        android:id="@+id/layout_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp">

                        <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rewards"
                                android:textColor="@color/color_pick"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View all"
                                    android:textColor="@color/color_pick" />

                            <ImageView
                                    android:id="@+id/imageView17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_arrow_right" />
                        </LinearLayout>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_reward"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="50dp"
                            android:background="@color/color_pick" />
                </LinearLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                    <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Party Wheel"
                            android:textColor="@color/color_pick"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_centerVertical="true">

                        <ImageView
                                android:id="@+id/imageView25"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/bg_5" />

                        <!--                        <View-->
                        <!--                                android:id="@+id/view4"-->
                        <!--                                android:layout_width="match_parent"-->
                        <!--                                android:layout_height="match_parent"-->
                        <!--                                android:background="#94000000" />-->

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                            <Button
                                    android:id="@+id/btn_spin"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_bottom_color"
                                    android:gravity="center"
                                    android:text="Spin Now"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_text" />

                            <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Only 50 pts"
                                    android:textColor="#000" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true">

                        <rubikstudio.library.LuckyWheelView
                                android:id="@+id/luckyWheel"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_centerInParent="true"
                                app:lkwBackgroundColor="#FF9800"
                                app:lkwCenterImage="@drawable/ic_wheel_center_image"
                                app:lkwTopTextColor="#263238">

                        </rubikstudio.library.LuckyWheelView>

                        <ImageView
                                android:id="@+id/imageView23"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_wheel_border" />

                    </RelativeLayout>

                </RelativeLayout>


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/color_pick" />


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                    <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIP Members"
                            android:textColor="@color/color_pick"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView12"
                            android:text="This section is only accesible for Star Rewards VIP members"
                            android:textColor="@color/color_pick"
                            android:textSize="11sp" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enter"
                                android:textColor="@color/color_pick" />

                        <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_right" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                    <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_vip_member_banner" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>