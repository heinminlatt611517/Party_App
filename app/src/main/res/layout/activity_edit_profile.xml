<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.AppFlow.optional.EditProfileActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_title_bar">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="10dp"
                android:layout_centerVertical="true" />

        <TextView
                android:fontFamily="@font/za"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true" />

    </RelativeLayout>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_concert_banner"
            android:scaleType="centerCrop"
            android:id="@+id/imageView2" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D5000000"
            android:id="@+id/view" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_title_bar"
            android:orientation="horizontal"
            android:id="@+id/layout_top">

        <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:src="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:padding="10dp" />

        <TextView
                android:fontFamily="@font/za"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_centerInParent="true"
                android:textColor="@color/color_pick"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

    </RelativeLayout>

    <View
            android:layout_below="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_pick" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_top">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_user_profile"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />

                <TextView
                        android:fontFamily="@font/za"
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:text="@string/your_name"
                        android:textColor="@color/color_pick"
                        android:visibility="visible" />

                <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/tv_mail_address"
                        android:background="@drawable/bg_title_bar_radius"
                        android:capitalize="none"
                        android:inputType="textPersonName"
                        android:paddingStart="15dp"
                        android:textColor="@color/color_pick"
                        android:textSize="14sp"
                        android:visibility="visible" />

                <TextView
                        android:fontFamily="@font/za"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/your_gender"
                        android:textStyle="bold"
                        android:textColor="@color/color_pick" />

                <TextView
                        android:fontFamily="@font/za"
                        android:id="@+id/et_gender"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/tv_mail_address"
                        android:background="@drawable/bg_title_bar_radius"
                        android:capitalize="none"
                        android:inputType="textEmailAddress"
                        android:paddingStart="15dp"
                        android:textColor="@color/color_pick"
                        android:gravity="center_vertical"
                        android:textSize="14sp" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/phone"
                            android:textStyle="bold"
                            android:textColor="@color/color_pick" />


                </LinearLayout>


                <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/tv_mail_address"
                        android:background="@drawable/bg_title_bar_radius"
                        android:capitalize="none"
                        android:inputType="phone"
                        android:paddingStart="15dp"
                        android:id="@+id/et_phone"
                        android:textColor="@color/color_pick"
                        android:textSize="14sp" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/date_of_birth"
                            android:textStyle="bold"
                            android:textColor="@color/color_pick" />


                </LinearLayout>


                <TextView
                        android:fontFamily="@font/za"
                        android:id="@+id/et_dob"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/tv_mail_address"
                        android:background="@drawable/bg_title_bar_radius"
                        android:capitalize="none"
                        android:inputType="datetime"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:textColor="@color/color_pick"
                        android:textSize="14sp" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/za"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/bio"
                            android:textStyle="bold"
                            android:textColor="@color/color_pick" />


                </LinearLayout>


                <EditText
                        android:id="@+id/et_bio"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/tv_mail_address"
                        android:background="@drawable/bg_title_bar_radius"
                        android:capitalize="none"
                        android:inputType="text"
                        android:paddingStart="15dp"
                        android:textColor="@color/color_pick"
                        android:textSize="14sp" />


                <Button
                        android:id="@+id/btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_bottom_color"
                        android:text="@string/text_continue"
                        android:textColor="@android:color/black" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>