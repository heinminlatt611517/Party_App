<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_bg"
        tools:context=".views.AppFlow.InviteFriendsActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_title_bar">

        <TextView
                android:fontFamily="@font/za"
                android:text="invite friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

        <ImageView
                android:src="@drawable/ic_arrow_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/btnBack"
                android:padding="10dp" />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                    android:fontFamily="@font/za"
                    android:text="Joshua Blonz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_pick" />

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_pick"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".3"
                android:background="@color/color_pick" />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                    android:fontFamily="@font/za"
                    android:text="Alexandra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_pick" />

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/color_pick"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".3"
                android:background="@color/color_pick" />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                    android:fontFamily="@font/za"
                    android:text="Niko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_pick" />

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/color_pick"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".3"
                android:background="@color/color_pick" />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                    android:fontFamily="@font/za"
                    android:text="Paul Picciano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_pick" />

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/color_pick"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".3"
                android:background="@color/color_pick" />


    </LinearLayout>


</LinearLayout>